{
    "name": "effectphp/effect",
    "description": "Functional effects library for PHP with typed error handling",
    "type": "library",
    "license": "MIT",
    "keywords": ["effect", "functional", "monad", "error-handling", "typed-errors", "fibers"],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "carthage-software/mago": "^1.0.3",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "EffectPHP\\": "src/"
        },
        "classmap": [
            "src/Effect/EffectOp.php",
            "src/Cause/Cause.php",
            "src/Exit/Exit_.php"
        ],
        "files": [
            "src/Functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "EffectPHP\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "carthage-software/mago": true
        }
    },
    "minimum-stability": "stable"
}
